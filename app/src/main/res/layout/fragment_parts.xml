<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:context=".view_controller.DrawerContentFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/part_image"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:adjustViewBounds="true"
            android:contentDescription="part_image"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_placeholder" />


        <LinearLayout
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
            >
            <TextView
                android:id="@+id/part_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:textSize="20sp"

                android:text="MCP3204" />

            <TextView
                android:id="@+id/part_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"

                android:text="przetwornik A/D; Ch: 4; 12bit; 100ksps; 2,7÷5,5V; SO14" />

            <TextView
                android:id="@+id/part_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"

                android:text="Układy THT" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ilość:"
                android:textSize="20sp"
                android:gravity="center_horizontal"
                />

            <TextView
                android:id="@+id/part_amount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="numberDecimal"
                android:text="1"
                android:textSize="20sp"
                android:gravity="center_horizontal"
                />

            <TextView
                android:visibility="gone"
                android:id="@+id/drawer_position_label"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Szufladka:"
                />

            <TextView
                android:visibility="gone"
                android:gravity="center_horizontal"
                android:id="@+id/drawer_position"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4x5"
                />

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>